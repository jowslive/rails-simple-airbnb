<%= render "shared/navbar" %>

<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <p><%= @flats.count %> flat(s)</p>
    </div>
  </div>

  <div class="row">
    <!-- Each Card -->
    <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="flat-card">
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex">
                <%= fa_icon "users 2x", style: "color:#EF7C8E;" %> <p class="ml-2 mt-1"> <%= flat.number_of_guests %> </p>
              </div>
              <div class="flex ml-3">
                <%= fa_icon "euro sign 2x", style: "color:#94C973;" %> <p class="ml-2 mt-1"> <%= flat.price_per_night %> </p>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to "More info", flat_path(flat)%>
            <%= link_to 'Edit', edit_flat_path(flat.id), class: "ml-2 text-warning" %>
            <%= link_to 'Delete', flat_path(flat.id), class: "ml-2 text-danger", method: :delete, data: { confirm: 'Are you sure?'} %>
          </div>
        </div>
      </div>
    <% end %>
</div>
