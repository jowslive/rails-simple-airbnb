<%= render "shared/navbar" %>

<div class="container">
  <div class="row justify-content-center">
    <h1 class="mt-5"><%= @flat.name %></h1>
  </div>
  <div class="row justify-content-center">
    <h3 class="text-muted"><%= @flat.address %></h3>
  </div>
  <div class="row justify-content-center">
    <div class="flex">
      <%= fa_icon "users 2x", style: "color:#EF7C8E;" %> <p class="mt-n2 p-3"> <%= @flat.number_of_guests %> </p>
    </div>
    <div class="flex">
      <%= fa_icon "euro sign 2x", style: "color:#94C973;" %> <p class="mt-n2 p-3"> <%= @flat.price_per_night %> </p>
    </div>
  </div>
  <div class="row justify-content-center mt-5">
    <p><%= @flat.description %></p>
  </div>
</div>